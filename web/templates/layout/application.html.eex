<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="description" content="">
  <meta name="keywords" content="">
  <meta name="author" content="">
  <meta http-equiv="cleartype" content="on">

  <meta name="HandheldFriendly" content="True">
  <meta name="MobileOptimized" content="320">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>Journey Planner</title>

  <link rel="stylesheet" media="all" href="/css/jrny_plnr.css" />
</head>

<body>
  <div id="top"></div>

  <div id="wrapper">
    <div id="header_container">
      <header>
        <h2 class="noselect">Journey Planner</h2>
      </header>
    </div>

    <div id="menu_icons">
      <a href="/home/"><img src="/images/home.png"></img></a>
      <a href="/plan/"><img src="/images/idea.png"></img></a>
      <a href="/sch/"><img src="/images/sch.png"></img></a>
      <a href="/map/"><img src="/images/planet.png"></img></a>
      <a href="/calendar/"><img src="/images/calendar.png"></img></a>
      <a href="/pears/"><img src="/images/flower.png"></img></a>
      <a href="/comm/"><img src="/images/comm.png"></img></a>
      <a href="/profile/"><img src="/images/profile.png"></img></a>
      <a href="/"><img src="/images/logout.png"></img></a>
    </div>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="/js/jquery-2.1.3.min.js"><\/script>')</script>
    <script src="/js/jrny_plnr.js"></script>

    <div id="maincontent_container">
      <div class="text-align_right mobile_helper"><a href="#bottom"><img src="/images/down.png"></img></a></div>

<%= @inner %>
      <br>
      <div class="text-align_right mobile_helper"><a href="#top"><img src="/images/up.png"></img></a></div>
    </div>

    <div class="row"><h4 id="msg_board"></h4></div>

    <div id="footer_container">
      <footer>
        <div class="row noselect">
          <div class="col span_2"> 
            <a href="http://elixir-lang.org/" target="_blank">
              <img src="/images/elixir-lang.png"></img>
            </a>
          </div>
          <div class="col span_5">
            <a href="http://www.phoenixframework.org/" target="_blank">
              <img src="/images/phoenix.png"></img>
            </a>
          </div>
          <div class="col span_6">
            <span>We hope to get your voice! Feel free to:</span>
            <br>
            <span><a href="#" onclick="showWarn('Under construction, sorry.');">contact us</a>, plz.</span>
          </div>
          <div class="col span_3">
            <h6><i>@ JourneyPlannerTeam<i></h6>
          </div>
        </div>
      </footer>
    </div>
  </div>

  <div id="bottom"></div>

  <script>
    $(function() {
      protectPasswd();

      var error = '<%= @error %>';
      var warn = '<%= @warn %>';
      var info = '<%= @info %>';
      if (error != '') {
        showError(error);
      } else if (warn != '') {
        showWarn(warn);
      } else if (info != '') {
        showInfo(info);
      }
    });
  </script>

</body>

</html>
